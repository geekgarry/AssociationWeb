
@{
	ViewBag.Title = "FileIndex";
	Layout = "~/Views/Shared/Admin_Layout_Ass.cshtml";
}
@section Scripts{
	<script src="~/Scripts/jquery-3.3.1.js"></script>
	<script type="text/javascript">
		$(function () {
			$("#username").val = $("#aduserid").val;
			$("#adminid").val = $("#adid").val;
		});
	</script>
}
	<div>
		<h2 style="text-align:center;">上传资料</h2>
		<form class="form-horizontal" style="margin:0 auto;width:300px;" action="/FileResource/AssUploadFile" method="post" enctype="multipart/form-data">
			<div class="form-group">
				<label for="exampleInputFile">File input</label>
				<input type="file" id="exampleInputFile" name="fileposition">
				<div>请以压缩形式上传文件</div>
				<button type="submit" class="btn btn-default">上传</button>
				<p class="help-block">
					@ViewBag.UploadStatus
				</p>
			</div>
		</form>
		<form class="form-horizontal" style="margin:0 auto;width:300px;" action="/FileResource/AddUploadFileAss" method="post" enctype="multipart/form-data">
			<input type="text" value="@Session["assname"]" id="username" name="upname" style="display:none;" />
			<input type="text" value="@Session["assid"]" id="adminid" name="upid" style="display:none;" />
			<input type="text" value="@ViewData["filepath"]" id="username" name="filepath" style="display:none;" />
			<div class="form-group">
				<label for="exampleInputfilename">文件名</label>
				<input type="text" class="form-control" id="exampleInputfilename1" name="filename" placeholder="filename">
			</div>
			<div class="form-group">
				<textarea class="form-control" rows="3" name="filecontent" placeholder="输入文件描述"></textarea>
			</div>
			<div class="form-group">
				<label for="exampleInputfiletype1">文件类型</label>
				<input type="text" class="form-control" id="exampleInputfiletype1" name="filetype" placeholder="filetype">
			</div>
			<div class="form-group">
				@ViewBag.UploadState
			</div>
			<div class="form-group">
				<button type="submit" class="btn btn-default">提交</button>
			</div>
		</form>
	</div>

