
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>社团申请注册管理员</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@Scripts.Render("~/bundles/modernizr")
</head>
<body>
	<div style="width:100%;">
		<h3 style="text-align:center;">社团申请管理员(每个社团只有一个)</h3>
		<br />
		<br />
		<form class="form-horizontal" action="~/Admin/AssAdminRegister" style="margin-left:33%;">
			<div class="form-group">
				<label for="inputUserid3" class="col-sm-2 control-label">Userid</label>
				<div class="col-sm-10">
					<input type="text" class="form-control" id="inputUserid3" name="userid" placeholder="Userid">
				</div>
			</div>
			<div class="form-group">
				<label for="inputPassword3" class="col-sm-2 control-label">Password</label>
				<div class="col-sm-10">
					<input type="password" class="form-control" id="inputPassword3" name="password" placeholder="Password">
				</div>
			</div>
			<div class="form-group">
				<label for="inputConfirmPassword3" class="col-sm-2 control-label">ConfirmPassword</label>
				<div class="col-sm-10">
					<input type="password" class="form-control" id="inputConfirmPassword3" name="confirmpassword" placeholder="ConfirmPassword">
				</div>
			</div>
			<div class="form-group">
				<label for="inputAssociation3" class="col-sm-2 control-label">Association</label>
				<div class="col-sm-10">
					<input type="text" class="form-control" id="inputAssociation3" name="assname" placeholder="Association">
				</div>
			</div>
			<div class="form-group">
				<label for="inputAssociationIntroduction" class="col-sm-2 control-label">AssIntroduction</label>
				<div class="col-sm-10">
					<textarea class="form-control" rows="3" name="assintro" placeholder="AssociationIntroduction"></textarea>
				</div>
			</div>
			<div class="form-group">
				<label for="inputTeacherInCharge" class="col-sm-2 control-label">TeacherInCharge</label>
				<div class="col-sm-10">
					<input type="text" class="form-control" id="inputTeacherInCharge" name="assteacher" placeholder="TeacherInCharge">
				</div>
			</div>
			<div class="form-group">
				<label for="inputStudentInCharge" class="col-sm-2 control-label">StudentInCharge</label>
				<div class="col-sm-10">
					<input type="text" class="form-control" id="inputStudentInCharge" name="assstudent" placeholder="StudentInCharge">
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					@ViewBag.Register
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<button type="submit" class="btn btn-default">Sign in</button>
				</div>
			</div>
		</form>
	</div>
</body>
</html>
